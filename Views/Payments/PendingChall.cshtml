@model IEnumerable<PMS.Web.Models.Challan>

@{
    ViewData["Title"] = "Pending Challans";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Pending Challans</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    No pending challans found.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <div class="alert alert-warning mb-0">
                    <strong>Total Pending Challans: @Model.Count()</strong>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 600px; overflow-y: auto; overflow-x: auto; width: 100%; -webkit-overflow-scrolling: touch;">
                    <table class="table table-bordered table-hover mb-0" id="pendingChallansTable" style="width: 100%; table-layout: auto; min-width: 800px;">
                        <thead class="sticky-top" style="background-color: #071a2e; color: white;">
                            <tr>
                                <th scope="col" class="ps-3">@Html.DisplayNameFor(model => model.uid)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.customerno)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.depsoiteslipno)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.bankname)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.bankverified)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.depositdate)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.bankverifieddate)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.deposittype)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.currency)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.createdby)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.verifiedby)</th>
                                <th scope="col" class="pe-3">@Html.DisplayNameFor(model => model.creationdate)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3 fw-medium">@Html.DisplayFor(modelItem => item.uid)</td>
                                    <td>@Html.DisplayFor(modelItem => item.customerno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.depsoiteslipno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.bankname)</td>
                                    <td>
                                        <span class="badge bg-warning">@(item.bankverified ?? "Pending")</span>
                                    </td>
                                    <td>@(item.depositdate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>@(item.bankverifieddate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>@Html.DisplayFor(modelItem => item.deposittype)</td>
                                    <td>@Html.DisplayFor(modelItem => item.currency)</td>
                                    <td>@Html.DisplayFor(modelItem => item.createdby)</td>
                                    <td>@Html.DisplayFor(modelItem => item.verifiedby)</td>
                                    <td class="pe-3">@(item.creationdate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .container-fluid {
            overflow-x: hidden;
            max-width: 100%;
        }

        #pendingChallansTable {
            font-size: 0.85rem;
            width: 100%;
            table-layout: auto;
        }

        #pendingChallansTable thead th {
            user-select: none;
            position: relative;
            white-space: nowrap;
            background-color: #071a2e !important;
            color: white !important;
            border-color: #071a2e !important;
            padding: 0.5rem 0.4rem;
            font-size: 0.8rem;
        }

        #pendingChallansTable tbody tr {
            transition: background-color 0.15s ease;
        }

        #pendingChallansTable tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        #pendingChallansTable tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

        #pendingChallansTable tbody tr:hover {
            background-color: #e9ecef !important;
        }

        #pendingChallansTable tbody td {
            vertical-align: middle;
            padding: 0.4rem 0.3rem;
            white-space: nowrap;
            max-width: 150px;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 0.8rem;
        }

        #pendingChallansTable tbody td:first-child {
            white-space: normal;
            max-width: 120px;
            overflow: visible;
            padding: 0.3rem 0.2rem;
        }

        .table-responsive {
            overflow-x: auto !important;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table-responsive::-webkit-scrollbar {
            height: 12px;
            width: 12px;
        }

        .table-responsive::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        @@media (max-width: 1200px) {
            #pendingChallansTable {
                font-size: 0.8rem;
            }

            #pendingChallansTable tbody td {
                padding: 0.35rem 0.25rem;
                max-width: 120px;
            }

            #pendingChallansTable thead th {
                padding: 0.45rem 0.35rem;
                font-size: 0.75rem;
            }
        }

        @@media (max-width: 768px) {
            #pendingChallansTable {
                font-size: 0.75rem;
                min-width: 800px;
            }

            #pendingChallansTable tbody td {
                padding: 0.3rem 0.2rem;
                max-width: 100px;
            }

            #pendingChallansTable thead th {
                padding: 0.4rem 0.25rem;
                font-size: 0.7rem;
            }
        }
    </style>
}
