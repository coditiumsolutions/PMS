@model IEnumerable<PMS.Web.Models.Challan>

@{
    ViewData["Title"] = "Pending Challans";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Pending Challans</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    No pending challans found.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <div class="alert alert-warning mb-0">
                    <strong>Total Pending Challans: @Model.Count()</strong>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                    <table class="table table-bordered table-striped table-hover mb-0" id="pendingChallansTable">
                        <thead class="table-dark sticky-top">
                            <tr>
                                <th scope="col" class="ps-3">@Html.DisplayNameFor(model => model.uid)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.customerno)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.depsoiteslipno)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.bankname)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.bankverified)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.depositdate)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.bankverifieddate)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.deposittype)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.currency)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.createdby)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.verifiedby)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.creationdate)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3 fw-medium">@Html.DisplayFor(modelItem => item.uid)</td>
                                    <td>@Html.DisplayFor(modelItem => item.customerno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.depsoiteslipno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.bankname)</td>
                                    <td>
                                        <span class="badge bg-warning">@(item.bankverified ?? "Pending")</span>
                                    </td>
                                    <td>@(item.depositdate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>@(item.bankverifieddate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>@Html.DisplayFor(modelItem => item.deposittype)</td>
                                    <td>@Html.DisplayFor(modelItem => item.currency)</td>
                                    <td>@Html.DisplayFor(modelItem => item.createdby)</td>
                                    <td>@Html.DisplayFor(modelItem => item.verifiedby)</td>
                                    <td>@(item.creationdate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .container-fluid {
            font-size: 0.875rem;
        }
        .container-fluid h2 {
            font-size: 1.5rem;
        }
        .table {
            font-size: 0.875rem;
        }
        .table th {
            font-size: 0.875rem;
            position: sticky;
            top: 0;
            z-index: 10;
        }
        .btn {
            font-size: 0.875rem;
        }
    </style>
}
