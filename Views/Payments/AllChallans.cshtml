@model IEnumerable<PMS.Web.Models.Challan>

@{
    ViewData["Title"] = "All Challans";
    var paymentStatus = ViewBag.PaymentStatus as string ?? "";
    var searchRecord = ViewBag.SearchRecord as string ?? "";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalRecords = ViewBag.TotalRecords as int? ?? 0;
    var pageSize = ViewBag.PageSize as int? ?? 10;
}

<div class="container-fluid">
    @if (TempData["ChallanMessage"] != null)
    {
        var msgType = (TempData["ChallanMessageType"] as string) ?? "success";
        var alertClass = msgType == "success" ? "alert-success" : "alert-danger";
        <div class="alert @alertClass alert-dismissible fade show mb-3" role="alert">
            @TempData["ChallanMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Challans (@totalRecords)</h2>
        <div class="btn-group">
            <button type="button" id="processPaymentButton" class="btn btn-success btn-sm" disabled>Process Payment</button>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <form method="get" asp-action="AllChallans" id="filterForm">
                <div class="row align-items-end">
                    <div class="col-md-3">
                        <label for="paymentStatusSelect" class="form-label fw-semibold">Payment Status</label>
                        <select id="paymentStatusSelect" name="paymentStatus" class="form-select">
                            <option value="">All Status</option>
                            <option value="Verified" selected="@(paymentStatus == "Verified")">Verified</option>
                            <option value="Pending" selected="@(paymentStatus == "Pending")">Pending</option>
                            <option value="Un-Verified" selected="@(paymentStatus == "Un-Verified")">Un-Verified</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="searchRecordInput" class="form-label fw-semibold">Search Record</label>
                        <input type="text" id="searchRecordInput" name="searchRecord" class="form-control" placeholder="Deposit Slip No or Customer No" value="@searchRecord" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    No challans found.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 600px; overflow-y: auto; overflow-x: auto; width: 100%; -webkit-overflow-scrolling: touch;">
                    <table class="table table-bordered table-hover mb-0" id="challansTable" style="width: 100%; table-layout: auto; min-width: 700px;">
                        <thead class="sticky-top" style="background-color: #071a2e; color: white;">
                            <tr>
                                <th scope="col" class="text-center" style="width:60px; min-width:60px;">
                                    <input type="checkbox" id="selectAllChallans" disabled />
                                </th>
                                <th scope="col" class="ps-3">Cust No</th>
                                <th scope="col">DS No</th>
                                <th scope="col">Bank</th>
                                <th scope="col">Bank Verified</th>
                                <th scope="col">D Date</th>
                                <th scope="col">Veri Date</th>
                                <th scope="col">Depo Type</th>
                                <th scope="col" class="pe-3">Verified By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-challan-id="@item.uid" data-customerno="@item.customerno" class="challan-row">
                                    <td class="text-center">
                                        <input type="checkbox"
                                               class="challan-select"
                                               data-challan-id="@item.uid" />
                                    </td>
                                    <td class="ps-3">@Html.DisplayFor(modelItem => item.customerno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.depsoiteslipno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.bankname)</td>
                                    <td>
                                        @if (item.bankverified?.Trim().Equals("Verified", StringComparison.OrdinalIgnoreCase) == true ||
                                            item.bankverified?.Trim().Equals("Yes", StringComparison.OrdinalIgnoreCase) == true)
                                        {
                                            <span class="badge bg-success">@Html.DisplayFor(modelItem => item.bankverified)</span>
                                        }
                                        else if (item.bankverified?.Trim().Equals("Pending", StringComparison.OrdinalIgnoreCase) == true)
                                        {
                                            <span class="badge bg-warning">@Html.DisplayFor(modelItem => item.bankverified)</span>
                                        }
                                        else if (item.bankverified?.Trim().Equals("Un-Verified", StringComparison.OrdinalIgnoreCase) == true ||
                                                 item.bankverified?.Trim().Equals("Unverified", StringComparison.OrdinalIgnoreCase) == true ||
                                                 item.bankverified?.Trim().Equals("No", StringComparison.OrdinalIgnoreCase) == true)
                                        {
                                            <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.bankverified)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.bankverified)</span>
                                        }
                                    </td>
                                    <td>@(item.depositdate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>@(item.bankverifieddate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>@Html.DisplayFor(modelItem => item.deposittype)</td>
                                    <td class="pe-3">@Html.DisplayFor(modelItem => item.verifiedby)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination Section -->
        @if (totalRecords > 0)
        {
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-muted">Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, totalRecords)) of @totalRecords entries</span>
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination mb-0">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?paymentStatus=@paymentStatus&searchRecord=@searchRecord&page=@(currentPage - 1)&pageSize=@pageSize">Previous</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Previous</span>
                                    </li>
                                }
                                
                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="?paymentStatus=@paymentStatus&searchRecord=@searchRecord&page=@i&pageSize=@pageSize">@i</a>
                                    </li>
                                }
                                
                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?paymentStatus=@paymentStatus&searchRecord=@searchRecord&page=@(currentPage + 1)&pageSize=@pageSize">Next</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Next</span>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Styles {
    <style>
        .container-fluid {
            overflow-x: hidden;
            max-width: 100%;
        }

        #challansTable {
            font-size: 0.85rem;
            width: 100%;
            table-layout: auto;
        }

        #challansTable thead th {
            user-select: none;
            position: relative;
            white-space: nowrap;
            background-color: #071a2e !important;
            color: white !important;
            border-color: #071a2e !important;
            padding: 0.5rem 0.4rem;
            font-size: 0.8rem;
        }

        #challansTable tbody tr {
            transition: background-color 0.15s ease;
        }

        #challansTable tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        #challansTable tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

        #challansTable tbody tr:hover {
            background-color: #e9ecef !important;
        }

        #challansTable tbody td {
            vertical-align: middle;
            padding: 0.4rem 0.3rem;
            white-space: nowrap;
            max-width: 150px;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 0.8rem;
        }

        #challansTable tbody td:first-child {
            white-space: normal;
            max-width: 80px;
            overflow: visible;
            padding: 0.3rem 0.2rem;
        }

        .table-responsive {
            overflow-x: auto !important;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table-responsive::-webkit-scrollbar {
            height: 12px;
            width: 12px;
        }

        .table-responsive::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        .pagination {
            font-size: 0.875rem;
        }

        .page-link {
            padding: 0.375rem 0.75rem;
        }

        @@media (max-width: 1200px) {
            #challansTable {
                font-size: 0.8rem;
            }

            #challansTable tbody td {
                padding: 0.35rem 0.25rem;
                max-width: 120px;
            }

            #challansTable thead th {
                padding: 0.45rem 0.35rem;
                font-size: 0.75rem;
            }
        }

        @@media (max-width: 768px) {
            #challansTable {
                font-size: 0.75rem;
                min-width: 650px;
            }

            #challansTable tbody td {
                padding: 0.3rem 0.2rem;
                max-width: 100px;
            }

            #challansTable thead th {
                padding: 0.4rem 0.25rem;
                font-size: 0.7rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        (function () {
            const table = document.getElementById('challansTable');
            const processButton = document.getElementById('processPaymentButton');
            const addChallanButton = document.getElementById('addChallanButton');
            if (!table) return;

            table.addEventListener('dblclick', function (event) {
                const row = event.target.closest('tr.challan-row');
                if (!row) return;

                const challanId = row.getAttribute('data-challan-id');
                if (!challanId) return;

                const url = '@Url.Action("ChallanDetails", "Payments")/' + challanId;
                window.location.href = url;
            });

            // Single-select checkbox behavior + Process Payment navigation
            table.addEventListener('change', function (event) {
                const checkbox = event.target.closest('input.challan-select');
                if (!checkbox) return;

                if (checkbox.checked) {
                    // Uncheck all others
                    const all = table.querySelectorAll('input.challan-select');
                    all.forEach(cb => {
                        if (cb !== checkbox) cb.checked = false;
                    });
                    if (processButton) {
                        processButton.disabled = false;
                    }
                } else {
                    const anyChecked = table.querySelector('input.challan-select:checked');
                    if (processButton) {
                        processButton.disabled = !anyChecked;
                    }
                }
            });

            if (processButton) {
                processButton.addEventListener('click', function () {
                    const selected = table.querySelector('input.challan-select:checked');
                    if (!selected) return;
                    const challanId = selected.getAttribute('data-challan-id');
                    if (!challanId) return;
                    const url = '@Url.Action("ProcessChallanPayments", "Payments")/' + challanId;
                    window.location.href = url;
                });
            }

            if (addChallanButton) {
                addChallanButton.addEventListener('click', function () {
                    const selected = table.querySelector('input.challan-select:checked');
                    if (!selected) {
                        alert('Please select a challan row first.');
                        return;
                    }
                    const row = selected.closest('tr.challan-row');
                    if (!row) return;
                    const customerNo = row.getAttribute('data-customerno') || '';
                    const baseUrl = '@Url.Action("CreateChallan", "Payments")';
                    const url = baseUrl + '?customerno=' + encodeURIComponent(customerNo);
                    window.location.href = url;
                });
            }
        })();
    </script>
}
