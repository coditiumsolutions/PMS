@model IEnumerable<PMS.Web.Models.Payment>

@{
    ViewData["Title"] = "All Payments";
    var searchCustomer = ViewBag.SearchCustomer as string ?? "";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalRecords = ViewBag.TotalRecords as int? ?? 0;
    var pageSize = ViewBag.PageSize as int? ?? 10;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Payments (@totalRecords)</h2>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <form method="get" asp-action="AllPayments" id="paymentSearchForm">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <label for="searchCustomerInput" class="form-label fw-semibold">Search Customer No</label>
                        <input type="text" id="searchCustomerInput" name="searchCustomer" class="form-control" placeholder="Customer No (e.g. BTKH-MSG0716)" value="@searchCustomer" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    No payments found.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 600px; overflow-y: auto; overflow-x: auto; width: 100%; -webkit-overflow-scrolling: touch;">
                    <table class="table table-bordered table-hover mb-0" id="paymentsTable" style="width: 100%; table-layout: auto; min-width: 700px;">
                        <thead class="sticky-top" style="background-color: #071a2e; color: white;">
                            <tr>
                                <th scope="col" class="ps-3">Cust No</th>
                                <th scope="col">Paid Amount</th>
                                <th scope="col">Paid Date</th>
                                <th scope="col">Method</th>
                                <th scope="col">Bank</th>
                                <th scope="col">Created By</th>
                                <th scope="col">DS No</th>
                                <th scope="col">DS Date</th>
                                <th scope="col" class="pe-3">Install No</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3 fw-medium">@Html.DisplayFor(modelItem => item.customerno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PaidAmount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PaidDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Method)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BankName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DSNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DSDate)</td>
                                    <td class="pe-3">@Html.DisplayFor(modelItem => item.InstallNo)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination Section -->
        @if (totalRecords > 0)
        {
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-muted">Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, totalRecords)) of @totalRecords entries</span>
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination mb-0">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?searchCustomer=@searchCustomer&page=@(currentPage - 1)&pageSize=@pageSize">Previous</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Previous</span>
                                    </li>
                                }
                                
                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="?searchCustomer=@searchCustomer&page=@i&pageSize=@pageSize">@i</a>
                                    </li>
                                }
                                
                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?searchCustomer=@searchCustomer&page=@(currentPage + 1)&pageSize=@pageSize">Next</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Next</span>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        }
    }
    </div>
</div>

@section Styles {
    <style>
        .container-fluid {
            overflow-x: hidden;
            max-width: 100%;
        }

        #paymentsTable {
            font-size: 0.85rem;
            width: 100%;
            table-layout: auto;
        }

        #paymentsTable thead th {
            user-select: none;
            position: relative;
            white-space: nowrap;
            background-color: #071a2e !important;
            color: white !important;
            border-color: #071a2e !important;
            padding: 0.5rem 0.4rem;
            font-size: 0.8rem;
        }

        #paymentsTable tbody tr {
            transition: background-color 0.15s ease;
        }

        #paymentsTable tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        #paymentsTable tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

        #paymentsTable tbody tr:hover {
            background-color: #e9ecef !important;
        }

        #paymentsTable tbody td {
            vertical-align: middle;
            padding: 0.4rem 0.3rem;
            white-space: nowrap;
            max-width: 150px;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 0.8rem;
        }

        #paymentsTable tbody td:first-child {
            white-space: normal;
            max-width: 130px;
            overflow: visible;
            padding: 0.3rem 0.2rem;
        }

        .table-responsive {
            overflow-x: auto !important;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table-responsive::-webkit-scrollbar {
            height: 12px;
            width: 12px;
        }

        .table-responsive::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        .pagination {
            font-size: 0.875rem;
        }

        .page-link {
            padding: 0.375rem 0.75rem;
        }

        @@media (max-width: 1200px) {
            #paymentsTable {
                font-size: 0.8rem;
            }

            #paymentsTable tbody td {
                padding: 0.35rem 0.25rem;
                max-width: 120px;
            }

            #paymentsTable thead th {
                padding: 0.45rem 0.35rem;
                font-size: 0.75rem;
            }
        }

        @@media (max-width: 768px) {
            #paymentsTable {
                font-size: 0.75rem;
                min-width: 650px;
            }

            #paymentsTable tbody td {
                padding: 0.3rem 0.2rem;
                max-width: 100px;
            }

            #paymentsTable thead th {
                padding: 0.4rem 0.25rem;
                font-size: 0.7rem;
            }
        }
    </style>
}
