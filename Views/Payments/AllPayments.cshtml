@model IEnumerable<PMS.Web.Models.Payment>

@{
    ViewData["Title"] = "All Payments";
    var searchCustomer = ViewBag.SearchCustomer as string ?? "";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalRecords = ViewBag.TotalRecords as int? ?? 0;
    var pageSize = ViewBag.PageSize as int? ?? 10;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Payments (@totalRecords)</h2>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <form method="get" asp-action="AllPayments" id="paymentSearchForm">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <label for="searchCustomerInput" class="form-label fw-semibold">Search Customer No</label>
                        <input type="text" id="searchCustomerInput" name="searchCustomer" class="form-control" placeholder="Customer No (e.g. BTKH-MSG0716)" value="@searchCustomer" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    No payments found.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                    <table class="table table-bordered table-striped table-hover mb-0" id="paymentsTable">
                        <thead class="table-dark sticky-top">
                            <tr>
                                <th scope="col" class="ps-3">Cust No</th>
                                <th scope="col">Paid Amount</th>
                                <th scope="col">Paid Date</th>
                                <th scope="col">Method</th>
                                <th scope="col">Bank</th>
                                <th scope="col">Created By</th>
                                <th scope="col">DS No</th>
                                <th scope="col">DS Date</th>
                                
                                <th scope="col">Install No</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3 fw-medium">@Html.DisplayFor(modelItem => item.customerno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PaidAmount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PaidDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Method)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BankName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DSNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DSDate)</td>
                                    
                                    <td>@Html.DisplayFor(modelItem => item.InstallNo)</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination Section -->
        @if (totalRecords > 0)
        {
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-muted">Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, totalRecords)) of @totalRecords entries</span>
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination mb-0">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?searchCustomer=@searchCustomer&page=@(currentPage - 1)&pageSize=@pageSize">Previous</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Previous</span>
                                    </li>
                                }
                                
                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="?searchCustomer=@searchCustomer&page=@i&pageSize=@pageSize">@i</a>
                                    </li>
                                }
                                
                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?searchCustomer=@searchCustomer&page=@(currentPage + 1)&pageSize=@pageSize">Next</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Next</span>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        }
    }
</div>
