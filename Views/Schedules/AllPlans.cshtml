@model IEnumerable<PMS.Web.Models.PaymentPlan>

@{
    ViewData["Title"] = "All Plans";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Plans</h2>
        <div class="d-flex gap-2">
            <button type="button" id="schedule-view-btn" class="btn btn-success d-none" disabled>Schedule View</button>
            <a asp-action="CreatePlan" class="btn btn-primary">Create Plan</a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">No payment plans found.</div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                    <table class="table table-bordered table-striped table-hover mb-0" id="plans-table">
                        <thead class="table-dark sticky-top">
                            <tr>
                                <th style="width: 4%; text-align: center;">Select</th>
                                <th class="ps-3">Plan No</th>
                                <th>P Detail</th>
                                <th>P Total</th>
                                <th>Pay Type</th>
                                <th>Size</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="plan-row"
                                    data-edit-url="@Url.Action("EditPlan", "Schedules", new { id = item.uid })"
                                    data-planno="@item.planno">
                                    <td class="text-center align-middle">
                                        @if (!string.IsNullOrWhiteSpace(item.planno))
                                        {
                                            <input type="checkbox" class="form-check-input plan-select-checkbox" />
                                        }
                                    </td>
                                    <td class="ps-3 fw-medium">@Html.DisplayFor(modelItem => item.planno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.plandetail)</td>
                                    <td>@Html.DisplayFor(modelItem => item.totalamount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.paymenttype)</td>
                                    <td>@Html.DisplayFor(modelItem => item.sizedetail)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        (function () {
            const rows = document.querySelectorAll('#plans-table .plan-row');
            const checkboxes = document.querySelectorAll('#plans-table .plan-select-checkbox');
            let selectedPlanno = null;

            // Double-click to open edit view
            rows.forEach(row => {
                row.addEventListener('dblclick', function () {
                    const url = this.getAttribute('data-edit-url');
                    if (url) {
                        window.location.href = url;
                    }
                });
            });

            // Single-select checkbox behavior
            checkboxes.forEach(cb => {
                cb.addEventListener('change', function () {
                    if (this.checked) {
                        // Uncheck all others
                        checkboxes.forEach(other => {
                            if (other !== this) {
                                other.checked = false;
                            }
                        });

                        const row = this.closest('.plan-row');
                        selectedPlanno = row ? row.getAttribute('data-planno') : null;
                    } else {
                        selectedPlanno = null;
                    }

                    toggleScheduleButton();
                });
            });

            const scheduleBtn = document.getElementById('schedule-view-btn');

            function toggleScheduleButton() {
                if (!scheduleBtn) return;
                if (selectedPlanno && selectedPlanno.trim() !== '') {
                    scheduleBtn.classList.remove('d-none');
                    scheduleBtn.disabled = false;
                } else {
                    scheduleBtn.classList.add('d-none');
                    scheduleBtn.disabled = true;
                }
            }

            if (scheduleBtn) {
                scheduleBtn.addEventListener('click', function () {
                    if (!selectedPlanno) return;
                    const baseUrl = '@Url.Action("PlanSchedule", "Schedules")';
                    const target = baseUrl + '?planno=' + encodeURIComponent(selectedPlanno);
                    window.location.href = target;
                });
            }

            // Initialize button state
            toggleScheduleButton();
        })();
    </script>
}
