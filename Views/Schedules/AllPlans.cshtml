@model IEnumerable<PMS.Web.Models.PaymentPlan>

@{
    ViewData["Title"] = "All Plans";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Plans</h2>
        <div class="d-flex gap-2">
            <button type="button" id="schedule-view-btn" class="btn btn-success d-none" disabled>Schedule View</button>
            <a asp-action="CreatePlan" class="btn btn-primary">Create Plan</a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">No payment plans found.</div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 600px; overflow-y: auto; overflow-x: auto; width: 100%; -webkit-overflow-scrolling: touch;">
                    <table class="table table-bordered table-hover mb-0" id="plans-table" style="width: 100%; table-layout: auto; min-width: 650px;">
                        <thead class="sticky-top" style="background-color: #071a2e; color: white;">
                            <tr>
                                <th style="width: 4%; min-width: 60px; text-align: center;">Select</th>
                                <th class="ps-3">Plan No</th>
                                <th>P Detail</th>
                                <th>P Total</th>
                                <th>Pay Type</th>
                                <th class="pe-3">Size</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="plan-row"
                                    data-edit-url="@Url.Action("EditPlan", "Schedules", new { id = item.uid })"
                                    data-planno="@item.planno">
                                    <td class="text-center align-middle">
                                        @if (!string.IsNullOrWhiteSpace(item.planno))
                                        {
                                            <input type="checkbox" class="form-check-input plan-select-checkbox" />
                                        }
                                    </td>
                                    <td class="ps-3 fw-medium">@Html.DisplayFor(modelItem => item.planno)</td>
                                    <td>@Html.DisplayFor(modelItem => item.plandetail)</td>
                                    <td>@Html.DisplayFor(modelItem => item.totalamount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.paymenttype)</td>
                                    <td class="pe-3">@Html.DisplayFor(modelItem => item.sizedetail)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        (function () {
            const rows = document.querySelectorAll('#plans-table .plan-row');
            const checkboxes = document.querySelectorAll('#plans-table .plan-select-checkbox');
            let selectedPlanno = null;

            // Double-click to open edit view
            rows.forEach(row => {
                row.addEventListener('dblclick', function () {
                    const url = this.getAttribute('data-edit-url');
                    if (url) {
                        window.location.href = url;
                    }
                });
            });

            // Single-select checkbox behavior
            checkboxes.forEach(cb => {
                cb.addEventListener('change', function () {
                    if (this.checked) {
                        // Uncheck all others
                        checkboxes.forEach(other => {
                            if (other !== this) {
                                other.checked = false;
                            }
                        });

                        const row = this.closest('.plan-row');
                        selectedPlanno = row ? row.getAttribute('data-planno') : null;
                    } else {
                        selectedPlanno = null;
                    }

                    toggleScheduleButton();
                });
            });

            const scheduleBtn = document.getElementById('schedule-view-btn');

            function toggleScheduleButton() {
                if (!scheduleBtn) return;
                if (selectedPlanno && selectedPlanno.trim() !== '') {
                    scheduleBtn.classList.remove('d-none');
                    scheduleBtn.disabled = false;
                } else {
                    scheduleBtn.classList.add('d-none');
                    scheduleBtn.disabled = true;
                }
            }

            if (scheduleBtn) {
                scheduleBtn.addEventListener('click', function () {
                    if (!selectedPlanno) return;
                    const baseUrl = '@Url.Action("PlanSchedule", "Schedules")';
                    const target = baseUrl + '?planno=' + encodeURIComponent(selectedPlanno);
                    window.location.href = target;
                });
            }

            // Initialize button state
            toggleScheduleButton();
        })();
    </script>
}

@section Styles {
    <style>
        .container-fluid {
            overflow-x: hidden;
            max-width: 100%;
        }

        #plans-table {
            font-size: 0.85rem;
            width: 100%;
            table-layout: auto;
        }

        #plans-table thead th {
            user-select: none;
            position: relative;
            white-space: nowrap;
            background-color: #071a2e !important;
            color: white !important;
            border-color: #071a2e !important;
            padding: 0.5rem 0.4rem;
            font-size: 0.8rem;
        }

        #plans-table tbody tr {
            transition: background-color 0.15s ease;
        }

        #plans-table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        #plans-table tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

        #plans-table tbody tr:hover {
            background-color: #e9ecef !important;
        }

        #plans-table tbody td {
            vertical-align: middle;
            padding: 0.4rem 0.3rem;
            white-space: nowrap;
            max-width: 180px;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 0.8rem;
        }

        #plans-table tbody td:first-child {
            white-space: normal;
            max-width: 80px;
            overflow: visible;
            padding: 0.3rem 0.2rem;
        }

        .table-responsive {
            overflow-x: auto !important;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table-responsive::-webkit-scrollbar {
            height: 12px;
            width: 12px;
        }

        .table-responsive::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        @@media (max-width: 1200px) {
            #plans-table {
                font-size: 0.8rem;
            }

            #plans-table tbody td {
                padding: 0.35rem 0.25rem;
                max-width: 140px;
            }

            #plans-table thead th {
                padding: 0.45rem 0.35rem;
                font-size: 0.75rem;
            }
        }

        @@media (max-width: 768px) {
            #plans-table {
                font-size: 0.75rem;
                min-width: 650px;
            }

            #plans-table tbody td {
                padding: 0.3rem 0.2rem;
                max-width: 110px;
            }

            #plans-table thead th {
                padding: 0.4rem 0.25rem;
                font-size: 0.7rem;
            }
        }
    </style>
}
