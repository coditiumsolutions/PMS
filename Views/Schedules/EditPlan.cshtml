@model PMS.Web.Models.PaymentPlan

@{
    ViewData["Title"] = "Edit Plan";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Plan Detail</h2>
        <div class="d-flex gap-2">
            <button type="button" id="edit-toggle-btn" class="btn btn-warning">Edit</button>
            <a asp-action="AllPlans" class="btn btn-secondary">Back</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="EditPlan" method="post" id="edit-plan-form">
                <input type="hidden" asp-for="uid" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="planno" class="form-label fw-semibold"></label>
                            <input asp-for="planno" class="form-control readonly-field" readonly />
                            <span asp-validation-for="planno" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="plandetail" class="form-label fw-semibold"></label>
                            <input asp-for="plandetail" class="form-control readonly-field" readonly />
                            <span asp-validation-for="plandetail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="totalamount" class="form-label fw-semibold"></label>
                            <input asp-for="totalamount" class="form-control readonly-field" readonly />
                            <span asp-validation-for="totalamount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="paymenttype" class="form-label fw-semibold"></label>
                            <input asp-for="paymenttype" class="form-control readonly-field" readonly />
                            <span asp-validation-for="paymenttype" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="sizedetail" class="form-label fw-semibold"></label>
                            <input asp-for="sizedetail" class="form-control readonly-field" readonly />
                            <span asp-validation-for="sizedetail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="creationdate" class="form-label fw-semibold"></label>
                            <input asp-for="creationdate" class="form-control readonly-field" type="date" readonly />
                            <span asp-validation-for="creationdate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="createdby" class="form-label fw-semibold"></label>
                            <input asp-for="createdby" class="form-control readonly-field" readonly />
                            <span asp-validation-for="createdby" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="comments" class="form-label fw-semibold"></label>
                            <textarea asp-for="comments" class="form-control readonly-field" rows="4" readonly></textarea>
                            <span asp-validation-for="comments" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" id="save-btn" class="btn btn-primary d-none">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        (function () {
            const editBtn = document.getElementById('edit-toggle-btn');
            const saveBtn = document.getElementById('save-btn');
            const fields = document.querySelectorAll('.readonly-field');
            let isReadOnly = true;

            function setReadOnly(state) {
                fields.forEach(f => {
                    if (state) {
                        f.setAttribute('readonly', 'readonly');
                    } else {
                        f.removeAttribute('readonly');
                    }
                });
            }

            setReadOnly(true);

            if (editBtn) {
                editBtn.addEventListener('click', function () {
                    isReadOnly = !isReadOnly;
                    setReadOnly(isReadOnly);

                    if (isReadOnly) {
                        this.textContent = 'Edit';
                        saveBtn.classList.add('d-none');
                    } else {
                        this.textContent = 'Cancel Edit';
                        saveBtn.classList.remove('d-none');
                    }
                });
            }
        })();
    </script>
}
