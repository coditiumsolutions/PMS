@model PMS.Web.Models.PaymentPlanChild

@{
    ViewData["Title"] = "Delete Child Payment";
}

<h2>Delete Child Payment</h2>

<h4>Are you sure you want to delete this payment?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.planno)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.planno)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.paymentdesc)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.paymentdesc)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.installmentno)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.installmentno)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.duedate)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.duedate)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.dueamount)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.dueamount)</dd>
    </dl>

    <form asp-action="DeleteChild" method="post">
        <input type="hidden" asp-for="uid" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="AllPayments" class="btn btn-secondary">Back</a>
    </form>
</div>
