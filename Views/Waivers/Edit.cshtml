@model PMS.Web.Models.Waiver

@{
    ViewData["Title"] = "Edit Waiver";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Edit Waiver</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Uid">
                <input type="hidden" asp-for="Uid" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="WaiveOffType" class="form-label"></label>
                        <input asp-for="WaiveOffType" class="form-control" />
                        <span asp-validation-for="WaiveOffType" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CustomerNo" class="form-label"></label>
                        <input asp-for="CustomerNo" class="form-control" />
                        <span asp-validation-for="CustomerNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CustomerName" class="form-label"></label>
                        <input asp-for="CustomerName" class="form-control" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="ProjectName" class="form-label"></label>
                        <input asp-for="ProjectName" class="form-control" />
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PropertyDetail" class="form-label"></label>
                        <input asp-for="PropertyDetail" class="form-control" />
                        <span asp-validation-for="PropertyDetail" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="RequestedPlotType" class="form-label"></label>
                        <input asp-for="RequestedPlotType" class="form-control" />
                        <span asp-validation-for="RequestedPlotType" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="PaymentDesc" class="form-label"></label>
                        <input asp-for="PaymentDesc" class="form-control" />
                        <span asp-validation-for="PaymentDesc" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="InstallmentNo" class="form-label"></label>
                        <input asp-for="InstallmentNo" class="form-control" type="number" />
                        <span asp-validation-for="InstallmentNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="DueAmount" class="form-label"></label>
                        <input asp-for="DueAmount" class="form-control" type="number" />
                        <span asp-validation-for="DueAmount" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="WaiveOffAmount" class="form-label"></label>
                        <input asp-for="WaiveOffAmount" class="form-control" type="number" />
                        <span asp-validation-for="WaiveOffAmount" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CreatedDate" class="form-label"></label>
                        <input asp-for="CreatedDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CreatedBy" class="form-label"></label>
                        <input asp-for="CreatedBy" class="form-control" />
                        <span asp-validation-for="CreatedBy" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <div class="form-check mt-4">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
