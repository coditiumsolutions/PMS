@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Module Grid (icons-based) -->
    <div class="mb-4">
        @await Html.PartialAsync("_DashboardModuleGrid")
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/dashboard-grid.css" asp-append-version="true" />
    <style>
        .module-tile {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            cursor: pointer;
        }
        .module-tile:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        .module-tile-customers {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .module-tile-payments {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }
        .module-tile-plots {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }
        .module-tile-allotment {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: white;
        }
        .module-tile-transfers {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            color: white;
        }
        .module-tile-schedules {
            background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
            color: white;
        }
        .module-tile-reports {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
            color: #333;
        }
        .module-icon {
            font-size: 3rem;
        }
        .list-group-item:hover {
            background-color: #f8f9fa;
        }
    </style>
}

