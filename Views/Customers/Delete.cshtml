@model PMS.Web.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Delete Customer</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="row">
        <div class="col-lg-8 col-xl-6">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Warning!</h4>
                <p class="mb-0">Are you sure you want to delete this customer? This action cannot be undone.</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Customer Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered mb-0">
                        <tbody>
                            <tr>
                                <th class="bg-light" style="width: 40%;">@Html.DisplayNameFor(model => model.CustomerNo)</th>
                                <td>@Html.DisplayFor(model => model.CustomerNo)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">@Html.DisplayNameFor(model => model.FullName)</th>
                                <td>@Html.DisplayFor(model => model.FullName)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">@Html.DisplayNameFor(model => model.FatherName)</th>
                                <td>@Html.DisplayFor(model => model.FatherName)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">@Html.DisplayNameFor(model => model.Cnic)</th>
                                <td>@Html.DisplayFor(model => model.Cnic)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">@Html.DisplayNameFor(model => model.ContactNo)</th>
                                <td>@Html.DisplayFor(model => model.ContactNo)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">@Html.DisplayNameFor(model => model.Email)</th>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="CustomerNo" />
                <div class="d-flex gap-2">
                    <input type="submit" value="Delete Customer" class="btn btn-danger btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

