@model PMS.Web.ViewModels.CustomerCreateViewModel

@{
    ViewData["Title"] = "New Customer";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 col-xl-8">
            <form asp-action="Create" id="customer-create-form">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <!-- Tabs navigation -->
                        <ul class="nav nav-tabs mb-3" id="customerCreateTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="personal-tab" data-bs-toggle="tab" data-bs-target="#personal" type="button" role="tab" aria-controls="personal" aria-selected="true">
                                    Personal Info
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">
                                    Contact Info
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="requested-tab" data-bs-toggle="tab" data-bs-target="#requested" type="button" role="tab" aria-controls="requested" aria-selected="false">
                                    Requested Property
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content" id="customerCreateTabsContent">
                            <!-- Personal Info Tab -->
                            <div class="tab-pane fade show active" id="personal" role="tabpanel" aria-labelledby="personal-tab">
                                <div class="card mb-4">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="mb-0">Personal Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.CustomerNo" class="form-label fw-semibold"></label>
                                                @if (string.IsNullOrWhiteSpace(Model.Customer.CustomerNo))
                                                {
                                                    <!-- New customer: allow entering or leave blank to auto-generate -->
                                                    <input asp-for="Customer.CustomerNo" class="form-control" />
                                                }
                                                else
                                                {
                                                    <!-- Existing customer: show as read-only -->
                                                    <input asp-for="Customer.CustomerNo" class="form-control" readonly />
                                                }
                                                <span asp-validation-for="Customer.CustomerNo" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.CreationDate" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.CreationDate" type="date" class="form-control" />
                                                <span asp-validation-for="Customer.CreationDate" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.FullName" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.FullName" class="form-control" />
                                                <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.FatherName" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.FatherName" class="form-control" />
                                                <span asp-validation-for="Customer.FatherName" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.Cnic" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.Cnic" class="form-control" />
                                                <span asp-validation-for="Customer.Cnic" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.Gender" class="form-label fw-semibold"></label>
                                                <select asp-for="Customer.Gender" class="form-select">
                                                    <option value="">Select Gender</option>
                                                    <option value="Male">Male</option>
                                                    <option value="Female">Female</option>
                                                </select>
                                                <span asp-validation-for="Customer.Gender" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Contact Info Tab -->
                            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                <div class="card mb-4">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="mb-0">Contact Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.ContactNo" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.ContactNo" class="form-control" />
                                                <span asp-validation-for="Customer.ContactNo" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.Email" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.Email" type="email" class="form-control" />
                                                <span asp-validation-for="Customer.Email" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <h6 class="text-muted mb-3 mt-2">Present Address</h6>
                                        <div class="mb-3">
                                            <label asp-for="Customer.PresAddress" class="form-label fw-semibold"></label>
                                            <textarea asp-for="Customer.PresAddress" class="form-control" rows="3"></textarea>
                                            <span asp-validation-for="Customer.PresAddress" class="text-danger"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.PresCity" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.PresCity" class="form-control" />
                                                <span asp-validation-for="Customer.PresCity" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.PresCountry" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.PresCountry" class="form-control" />
                                                <span asp-validation-for="Customer.PresCountry" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <hr class="my-4" />

                                        <h6 class="text-muted mb-3">Permanent Address</h6>
                                        <div class="mb-3">
                                            <label asp-for="Customer.PremAddress" class="form-label fw-semibold"></label>
                                            <textarea asp-for="Customer.PremAddress" class="form-control" rows="3"></textarea>
                                            <span asp-validation-for="Customer.PremAddress" class="text-danger"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.PremCity" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.PremCity" class="form-control" />
                                                <span asp-validation-for="Customer.PremCity" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.PremCountry" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.PremCountry" class="form-control" />
                                                <span asp-validation-for="Customer.PremCountry" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Requested Property Tab -->
                            <div class="tab-pane fade" id="requested" role="tabpanel" aria-labelledby="requested-tab">
                                <div class="card mb-4">
                                    <div class="card-header bg-success text-white">
                                        <h5 class="mb-0">Requested Property</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="RequestedProperty.ReqProject" class="form-label fw-semibold"></label>
                                                <input asp-for="RequestedProperty.ReqProject" class="form-control" />
                                                <span asp-validation-for="RequestedProperty.ReqProject" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="RequestedProperty.ReqSize" class="form-label fw-semibold"></label>
                                                <input asp-for="RequestedProperty.ReqSize" class="form-control" />
                                                <span asp-validation-for="RequestedProperty.ReqSize" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="RequestedProperty.ReqCategory" class="form-label fw-semibold"></label>
                                                <input asp-for="RequestedProperty.ReqCategory" class="form-control" />
                                                <span asp-validation-for="RequestedProperty.ReqCategory" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="RequestedProperty.ReqConstruction" class="form-label fw-semibold"></label>
                                                <input asp-for="RequestedProperty.ReqConstruction" class="form-control" />
                                                <span asp-validation-for="RequestedProperty.ReqConstruction" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Additional Information Section -->
                                <div class="card mb-4">
                                    <div class="card-header bg-secondary text-white">
                                        <h5 class="mb-0">Additional Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="Customer.CreatedBy" class="form-label fw-semibold"></label>
                                                <input asp-for="Customer.CreatedBy" class="form-control" />
                                                <span asp-validation-for="Customer.CreatedBy" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </div>

                <!-- Shaded area: action buttons below the form -->
                <div class="card shadow-sm mt-4">
                    <div class="card-body">
                        <input type="submit" value="Create Customer" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        (function () {
            const form = document.getElementById('customer-create-form');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                const fullName = document.getElementById('Customer_FullName');
                const fatherName = document.getElementById('Customer_FatherName');
                const cnic = document.getElementById('Customer_Cnic');

                const missing = [];
                if (!fullName || !fullName.value.trim()) missing.push('Full Name');
                if (!fatherName || !fatherName.value.trim()) missing.push('Father Name');
                if (!cnic || !cnic.value.trim()) missing.push('CNIC');

                if (missing.length > 0) {
                    e.preventDefault();
                    alert('Please fill the following required fields before saving:\\n- ' + missing.join('\\n- '));
                }
            });
        })();
    </script>

    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <script>
            alert('@successMessage');
        </script>
    }
}

