@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        let currentStep = 1;
        const totalSteps = 3;

        function showStep(step) {
            // Hide all tab panes
            document.querySelectorAll('.tab-pane').forEach(pane => {
                pane.classList.remove('show', 'active');
            });
            
            // Show current tab pane
            const panes = ['personal', 'contact', 'requested'];
            const currentPane = document.getElementById(panes[step - 1]);
            if (currentPane) {
                currentPane.classList.add('show', 'active');
            }
            
            // Update wizard steps
            document.querySelectorAll('.wizard-step').forEach((stepEl, index) => {
                const stepNum = index + 1;
                stepEl.classList.remove('active', 'completed');
                
                if (stepNum < step) {
                    stepEl.classList.add('completed');
                } else if (stepNum === step) {
                    stepEl.classList.add('active');
                }
            });
            
            // Update navigation buttons
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const submitBtn = document.getElementById('submitBtn');
            
            if (step === 1) {
                prevBtn.style.display = 'none';
            } else {
                prevBtn.style.display = 'inline-block';
            }
            
            if (step === totalSteps) {
                nextBtn.style.display = 'none';
                submitBtn.style.display = 'inline-block';
            } else {
                nextBtn.style.display = 'inline-block';
                submitBtn.style.display = 'none';
            }
        }

        function validateStep(step) {
            if (step === 1) {
                // Validate Personal Info
                const fullName = document.getElementById('Customer_FullName');
                const fatherName = document.getElementById('Customer_FatherName');
                const cnic = document.getElementById('Customer_Cnic');
                
                if (!fullName || !fullName.value.trim()) {
                    alert('Please enter Full Name');
                    fullName?.focus();
                    return false;
                }
                if (!fatherName || !fatherName.value.trim()) {
                    alert('Please enter Father Name');
                    fatherName?.focus();
                    return false;
                }
                if (!cnic || !cnic.value.trim()) {
                    alert('Please enter CNIC');
                    cnic?.focus();
                    return false;
                }
            }
            // Step 2 and 3 are optional, no validation needed
            return true;
        }

        function changeStep(direction) {
            const newStep = currentStep + direction;
            
            if (direction > 0 && !validateStep(currentStep)) {
                return;
            }
            
            if (newStep >= 1 && newStep <= totalSteps) {
                currentStep = newStep;
                showStep(currentStep);
            }
        }

        // Function to generate Customer No
        async function generateCustomerNo(projectName) {
            const customerNoInput = document.getElementById('Customer_CustomerNo');
            
            if (!customerNoInput) {
                console.error('CustomerNo input field not found!');
                return Promise.reject('Field not found');
            }
            
            if (!projectName) {
                customerNoInput.value = '';
                customerNoInput.placeholder = 'Select a project to generate Customer No';
                return Promise.resolve('');
            }
            
            // Show loading state
            customerNoInput.value = 'Generating...';
            customerNoInput.disabled = true;
            
            try {
                const response = await fetch(`/Customers/GetNextCustomerNo?projectName=${encodeURIComponent(projectName)}`);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const data = await response.json();
                
                if (data.customerNo) {
                    // Update the field (this is the actual form field that gets submitted)
                    customerNoInput.value = data.customerNo;
                    customerNoInput.placeholder = '';
                    console.log('CustomerNo generated:', data.customerNo);
                    return Promise.resolve(data.customerNo);
                } else {
                    customerNoInput.value = '';
                    customerNoInput.placeholder = 'Unable to generate Customer No. Please check project prefix.';
                    return Promise.reject('No customerNo in response');
                }
            } catch (error) {
                console.error('Error generating Customer No:', error);
                customerNoInput.value = '';
                customerNoInput.placeholder = 'Error generating Customer No';
                return Promise.reject(error);
            } finally {
                // Field is not disabled, so it will submit with form
                customerNoInput.disabled = false;
            }
        }

        // Auto-generate Customer No based on selected project
        (function() {
            const projectSelect = document.getElementById('ReqProject');
            const customerNoInput = document.getElementById('Customer_CustomerNo');
            
            if (projectSelect && customerNoInput) {
                // Listen for dropdown changes
                projectSelect.addEventListener('change', async function() {
                    await generateCustomerNo(this.value);
                });
                
                // Auto-generate on page load if project is already selected
                const selectedProject = projectSelect.value;
                if (selectedProject && !customerNoInput.value) {
                    // Small delay to ensure DOM is ready
                    setTimeout(() => {
                        generateCustomerNo(selectedProject);
                    }, 100);
                }
            }
        })();

        // Initialize wizard on page load
        (function () {
            showStep(1);
            
            // Show validation summary if there are errors
            const validationSummary = document.getElementById('validationSummary');
            if (validationSummary) {
                validationSummary.style.display = 'block';
                
                // Navigate to the tab with the first error
                const errorText = validationSummary.textContent.toLowerCase();
                if (errorText.includes('customer no') || errorText.includes('project')) {
                    showStep(3); // Requested Property tab
                } else if (errorText.includes('full name') || errorText.includes('father name') || errorText.includes('cnic')) {
                    showStep(1); // Personal Info tab
                } else if (errorText.includes('contact') || errorText.includes('email') || errorText.includes('address')) {
                    showStep(2); // Contact Info tab
                }
            }

            const form = document.getElementById('customer-create-form');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                const fullName = document.getElementById('Customer_FullName');
                const fatherName = document.getElementById('Customer_FatherName');
                const cnic = document.getElementById('Customer_Cnic');
                const customerNo = document.getElementById('Customer_CustomerNo');
                const creationDate = document.getElementById('Customer_CreationDate');
                const projectSelect = document.getElementById('ReqProject');

                // CRITICAL: If CustomerNo is empty but project is selected, generate it NOW before validation
                if (customerNo && (!customerNo.value || !customerNo.value.trim()) && projectSelect && projectSelect.value) {
                    e.preventDefault();
                    // Generate CustomerNo before allowing form submission
                    generateCustomerNo(projectSelect.value).then((generatedNo) => {
                        if (generatedNo && customerNo) {
                            customerNo.value = generatedNo;
                            // Now submit the form
                            form.submit();
                        } else {
                            alert('Error generating Customer No. Please try selecting the project again.');
                        }
                    }).catch((error) => {
                        console.error('Error generating CustomerNo:', error);
                        alert('Error generating Customer No. Please try selecting the project again.');
                    });
                    return;
                }

                const missing = [];
                const missingTabs = [];
                
                if (!fullName || !fullName.value.trim()) {
                    missing.push('Full Name');
                    missingTabs.push(1);
                }
                if (!fatherName || !fatherName.value.trim()) {
                    missing.push('Father Name');
                    missingTabs.push(1);
                }
                if (!cnic || !cnic.value.trim()) {
                    missing.push('CNIC');
                    missingTabs.push(1);
                }
                if (!creationDate || !creationDate.value.trim()) {
                    missing.push('Creation Date');
                    missingTabs.push(1);
                }
                
                // Check Customer No field - but note: server will generate it if project is selected
                // So we only warn if project is also not selected
                if ((!customerNo || !customerNo.value || !customerNo.value.trim()) && (!projectSelect || !projectSelect.value)) {
                    missing.push('Customer No (select a project in Requested Property tab)');
                    missingTabs.push(3);
                }

                if (missing.length > 0) {
                    e.preventDefault();
                    
                    // Show which tab has errors
                    const tabNames = { 1: 'Personal Info', 2: 'Contact Info', 3: 'Requested Property' };
                    const errorTabs = [...new Set(missingTabs)].map(t => tabNames[t]).join(', ');
                    
                    alert('Please fill the following required fields before saving:\\n\\n' + 
                          missing.join('\\n') + 
                          '\\n\\nPlease check the ' + errorTabs + ' tab(s).');
                    
                    // Navigate to the first tab with errors
                    if (missingTabs.includes(3)) {
                        showStep(3); // Requested Property tab
                    } else if (missingTabs.includes(1)) {
                        showStep(1); // Personal Info tab
                    } else {
                        showStep(2); // Contact Info tab
                    }
                }
            });
        })();
    </script>

    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <script>
            alert('@successMessage');
        </script>
    }
}

