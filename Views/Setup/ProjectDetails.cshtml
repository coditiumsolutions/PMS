@model PMS.Web.Models.Project

@{
    ViewData["Title"] = "Project Details";
    var actionPrefix = ViewBag.ActionPrefix as string ?? "Project";
    var listAction = actionPrefix == "Proj" ? "Proj" : "Projects";
    var editAction = actionPrefix + "Edit";
    var deleteAction = actionPrefix + "Delete";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Project Details</h2>
        <div class="d-flex gap-2">
            <a asp-action="@editAction" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="@listAction" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Project Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Project Name:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProjectName)</dd>

                        <dt class="col-sm-3">Sub Project:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.SubProject)</dd>

                        <dt class="col-sm-3">Prefix:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Prefix) ? "-" : Html.DisplayFor(model => model.Prefix))</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProjectDescription)</dd>

                        <dt class="col-sm-3">Created At:</dt>
                        <dd class="col-sm-9">@(Model.CreatedAt?.ToString("MMM dd, yyyy HH:mm") ?? "N/A")</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white">
                    <div class="d-flex gap-2">
                        <a asp-action="@editAction" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="@deleteAction" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="@listAction" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

