@model PMS.Web.Models.Project

@{
    ViewData["Title"] = "Delete Project";
    var actionPrefix = ViewBag.ActionPrefix as string ?? "Project";
    var listAction = actionPrefix == "Proj" ? "Proj" : "Projects";
    var deleteAction = actionPrefix + "Delete";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Delete Project</h2>
        <a asp-action="@listAction" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">⚠️ Confirm Deletion</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> Are you sure you want to delete this project? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Project Name:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProjectName)</dd>

                        <dt class="col-sm-3">Sub Project:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.SubProject)</dd>

                        <dt class="col-sm-3">Prefix:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Prefix) ? "-" : Html.DisplayFor(model => model.Prefix))</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProjectDescription)</dd>

                        <dt class="col-sm-3">Created At:</dt>
                        <dd class="col-sm-9">@(Model.CreatedAt?.ToString("MMM dd, yyyy HH:mm") ?? "N/A")</dd>
                    </dl>

                    <form asp-action="@deleteAction" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="@listAction" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

