@{
    ViewData["Title"] = "Setup";
    var configurations = ViewBag.Configurations as List<PMS.Web.Models.Configuration> ?? new List<PMS.Web.Models.Configuration>();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Setup & Configuration</h2>
        <a asp-controller="Configuration" asp-action="Index" class="btn btn-primary">Manage Configurations</a>
    </div>

    <!-- Configuration Summary Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Configurations Summary</h5>
        </div>
        <div class="card-body">
            <!-- KPI Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="card shadow-sm border-primary h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Total Configurations</h6>
                                    <h3 class="mb-0 text-primary">@ViewBag.TotalConfigurations</h3>
                                </div>
                                <div class="text-primary" style="font-size: 2.5rem;">⚙️</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm border-success h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Active Configurations</h6>
                                    <h3 class="mb-0 text-success">@ViewBag.ActiveConfigurations</h3>
                                </div>
                                <div class="text-success" style="font-size: 2.5rem;">✅</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm border-warning h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Inactive Configurations</h6>
                                    <h3 class="mb-0 text-warning">@ViewBag.InactiveConfigurations</h3>
                                </div>
                                <div class="text-warning" style="font-size: 2.5rem;">⚠️</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Configurations Table -->
            @if (configurations == null || !configurations.Any())
            {
                <div class="alert alert-info mb-0">
                    No configurations found. <a asp-controller="Configuration" asp-action="Create">Create a new configuration</a> to get started.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Config Key</th>
                                <th>Config Value</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var config in configurations)
                            {
                                <tr>
                                    <td class="fw-medium">@config.ConfigKey</td>
                                    <td>
                                        @if (config.ConfigValue.Length > 100)
                                        {
                                            <span title="@config.ConfigValue">@config.ConfigValue.Substring(0, 100)...</span>
                                        }
                                        else
                                        {
                                            @config.ConfigValue
                                        }
                                    </td>
                                    <td>
                                        @if (config.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Configuration" asp-action="Details" asp-route-id="@config.Id" class="btn btn-sm btn-info">Details</a>
                                        <a asp-controller="Configuration" asp-action="Edit" asp-route-id="@config.Id" class="btn btn-sm btn-warning">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .container-fluid {
            font-size: 0.875rem;
        }
        .container-fluid h2 {
            font-size: 1.5rem;
        }
        .table {
            font-size: 0.875rem;
        }
        .table th {
            font-size: 0.875rem;
        }
        .btn {
            font-size: 0.875rem;
        }
    </style>
}