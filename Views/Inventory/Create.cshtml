@model PMS.Web.Models.InventoryDetail

@{
    ViewData["Title"] = "Create Inventory";
    var projectOptions = ViewBag.ProjectOptions as List<string> ?? new();
    var subProjectOptions = ViewBag.SubProjectOptions as List<string> ?? new();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Create Inventory</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Project Information Section -->
                        <div class="card mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Project Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Project" class="form-label fw-semibold"></label>
                                        <select asp-for="Project" class="form-select" required>
                                            <option value="">Select Project</option>
                                            @foreach (var project in projectOptions)
                                            {
                                                if (project == Model.Project)
                                                {
                                                    <option value="@project" selected>@project</option>
                                                }
                                                else
                                                {
                                                    <option value="@project">@project</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="Project" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="SubProject" class="form-label fw-semibold"></label>
                                        <select asp-for="SubProject" class="form-select" required>
                                            <option value="">Select Sub Project</option>
                                            @foreach (var sub in subProjectOptions)
                                            {
                                                if (sub == Model.SubProject)
                                                {
                                                    <option value="@sub" selected>@sub</option>
                                                }
                                                else
                                                {
                                                    <option value="@sub">@sub</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="SubProject" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Sector" class="form-label fw-semibold"></label>
                                        <input asp-for="Sector" class="form-control" required />
                                        <span asp-validation-for="Sector" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Block" class="form-label fw-semibold"></label>
                                        <input asp-for="Block" class="form-control" required />
                                        <span asp-validation-for="Block" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Street" class="form-label fw-semibold"></label>
                                        <input asp-for="Street" class="form-control" required />
                                        <span asp-validation-for="Street" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="PlotNo" class="form-label fw-semibold"></label>
                                        <input asp-for="PlotNo" class="form-control" required />
                                        <span asp-validation-for="PlotNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Unit Information Section -->
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">Unit Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label asp-for="Category" class="form-label fw-semibold"></label>
                                        <select asp-for="Category" class="form-select" required>
                                            <option value="">Select Category</option>
                                            <option value="Residential">Residential</option>
                                            <option value="Commercial">Commercial</option>
                                        </select>
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="UnitSize" class="form-label fw-semibold"></label>
                                        <input asp-for="UnitSize" class="form-control" placeholder="e.g., 5 Marla" />
                                        <span asp-validation-for="UnitSize" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="UnitType" class="form-label fw-semibold"></label>
                                        <select asp-for="UnitType" class="form-select" id="unitTypeSelect">
                                            <option value="">Select Unit Type</option>
                                            <option value="Plot">Plot</option>
                                            <option value="Villa">Villa</option>
                                            <option value="Apartment">Apartment</option>
                                            <option value="Shop">Shop</option>
                                            <option value="Office">Office</option>
                                            <option value="Warehouse">Warehouse</option>
                                        </select>
                                        <span asp-validation-for="UnitType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row g-3 mt-3" id="unitExtraFields" style="display:none">
                                    <div class="col-md-4">
                                        <label asp-for="FloorNo" class="form-label fw-semibold"></label>
                                        <input asp-for="FloorNo" class="form-control" />
                                        <span asp-validation-for="FloorNo" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="UnitNo" class="form-label fw-semibold"></label>
                                        <input asp-for="UnitNo" class="form-control" />
                                        <span asp-validation-for="UnitNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Status Information Section -->
                        <div class="card mb-4">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">Status Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label asp-for="DevelopmentStatus" class="form-label fw-semibold"></label>
                                        <select asp-for="DevelopmentStatus" class="form-select">
                                            <option value="No" selected>No</option>
                                            <option value="Developed">Developed</option>
                                            <option value="Under Development">Under Development</option>
                                        </select>
                                        <span asp-validation-for="DevelopmentStatus" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="ConstStatus" class="form-label fw-semibold"></label>
                                        <select asp-for="ConstStatus" class="form-select">
                                            <option value="Vacant" selected>Vacant</option>
                                            <option value="Completed">Completed</option>
                                            <option value="Under Construction">Under Construction</option>
                                        </select>
                                        <span asp-validation-for="ConstStatus" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="AllotmentStatus" class="form-label fw-semibold"></label>
                                        <select asp-for="AllotmentStatus" class="form-select">
                                            <option value="Available" selected>Available</option>
                                            <option value="Reserved">Reserved</option>
                                            <option value="Allotted">Allotted</option>
                                        </select>
                                        <span asp-validation-for="AllotmentStatus" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <label asp-for="CreationDate" class="form-label fw-semibold"></label>
                                        <input asp-for="CreationDate" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                        <span asp-validation-for="CreationDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <input type="submit" value="Create Inventory" class="btn btn-primary btn-lg" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            const unitTypeSelect = document.getElementById('unitTypeSelect');
            const unitExtraFields = document.getElementById('unitExtraFields');

            function toggleUnitFields() {
                const value = (unitTypeSelect.value || '').toLowerCase();
                const shouldShow = value && value !== 'plot' && value !== 'villa';
                unitExtraFields.style.display = shouldShow ? '' : 'none';
            }

            if (unitTypeSelect && unitExtraFields) {
                unitTypeSelect.addEventListener('change', toggleUnitFields);
                toggleUnitFields();
            }
        })();
    </script>
}
