@model IEnumerable<PMS.Web.Models.InventoryDetail>

@{
    ViewData["Title"] = "Inventory Detail";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Inventory Detail</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <!-- Search Bar -->
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-md-3">
                    <label for="plotTypeSelect" class="form-label fw-semibold">Plot Type</label>
                    <select id="plotTypeSelect" class="form-select">
                        <option value="">Select Plot Type</option>
                        <option value="Residential">Residential</option>
                        <option value="Commercial">Commercial</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="plotNoInput" class="form-label fw-semibold">Plot No</label>
                    <input type="text" id="plotNoInput" class="form-control" placeholder="Enter Plot No" />
                </div>
                <div class="col-md-3">
                    <button type="button" id="searchButton" class="btn btn-primary w-100">Search</button>
                </div>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    No plots found. <a asp-action="Create">Create a new plot</a> to get started.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 600px; overflow-y: auto; overflow-x: auto; width: 100%; -webkit-overflow-scrolling: touch;">
                    <table class="table table-bordered table-hover mb-0" id="plotsTable" style="width: 100%; table-layout: auto; min-width: 700px;">
                        <thead class="sticky-top" style="background-color: #071a2e; color: white;">
                            <tr>
                                <th scope="col" class="ps-2 text-center" style="width: 110px; min-width: 110px;">Actions</th>
                                <th scope="col" class="ps-3">@Html.DisplayNameFor(model => model.Project)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.SubProject)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Sector)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Block)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.PlotNo)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Category)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.UnitSize)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.UnitType)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.AllotmentStatus)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.CustomerNo)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-2 text-center" style="width: 110px; min-width: 110px;">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.UID" class="btn btn-sm btn-info" title="View Details" style="padding: 0.1rem 0.2rem;">
                                                <i class="bi bi-eye" style="font-size: 0.7rem;"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.UID" class="btn btn-sm btn-warning" title="Edit" style="padding: 0.1rem 0.2rem;">
                                                <i class="bi bi-pencil" style="font-size: 0.7rem;"></i>
                                            </a>
                                        </div>
                                    </td>
                                    <td class="ps-3">@Html.DisplayFor(modelItem => item.Project)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SubProject)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Sector)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Block)</td>
                                    <td class="fw-medium">@Html.DisplayFor(modelItem => item.PlotNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Category)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UnitSize)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UnitType)</td>
                                    <td>
                                        @if (item.AllotmentStatus?.ToLower() == "allotted" || item.AllotmentStatus?.ToLower() == "reserved")
                                        {
                                            <span class="badge bg-success">@Html.DisplayFor(modelItem => item.AllotmentStatus)</span>
                                        }
                                        else if (item.AllotmentStatus?.ToLower() == "available")
                                        {
                                            <span class="badge bg-info">@Html.DisplayFor(modelItem => item.AllotmentStatus)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.AllotmentStatus)</span>
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.CustomerNo)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<script>
    (function () {
        const plotTypeSelect = document.getElementById('plotTypeSelect');
        const plotNoInput = document.getElementById('plotNoInput');
        const searchButton = document.getElementById('searchButton');
        const table = document.getElementById('plotsTable');
        
        if (!plotTypeSelect || !plotNoInput || !searchButton || !table) {
            return;
        }

        const tbody = table.getElementsByTagName('tbody')[0];
        if (!tbody) {
            return;
        }

        const rows = Array.from(tbody.getElementsByTagName('tr'));

        function filterTable() {
            const plotType = plotTypeSelect.value.trim();
            const plotNo = plotNoInput.value.trim().toLowerCase();
            
            // If both fields are empty, show all rows
            if (!plotType && !plotNo) {
                rows.forEach(row => {
                    row.style.display = '';
                });
                return;
            }
            
            rows.forEach(row => {
                const cells = row.getElementsByTagName('td');
                let matches = true;
                
                // Check PlotType (Category column - index 5)
                if (plotType) {
                    const categoryCell = cells[5];
                    const categoryText = (categoryCell.textContent || categoryCell.innerText).trim();
                    if (categoryText !== plotType) {
                        matches = false;
                    }
                }
                
                // Check PlotNo (PlotNo column - index 4)
                if (plotNo && matches) {
                    const plotNoCell = cells[4];
                    const plotNoText = (plotNoCell.textContent || plotNoCell.innerText).trim().toLowerCase();
                    if (plotNoText.indexOf(plotNo) === -1) {
                        matches = false;
                    }
                }
                
                row.style.display = matches ? '' : 'none';
            });
        }

        // Search button click event
        searchButton.addEventListener('click', filterTable);
        
        // Allow Enter key to trigger search
        plotNoInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                filterTable();
            }
        });
        
        // Allow Enter key on PlotType select
        plotTypeSelect.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                filterTable();
            }
        });
    })();
</script>

@section Styles {
    <style>
        .container-fluid {
            overflow-x: hidden;
            max-width: 100%;
        }

        #plotsTable {
            font-size: 0.85rem;
            width: 100%;
            table-layout: auto;
        }

        #plotsTable thead th {
            user-select: none;
            position: relative;
            white-space: nowrap;
            background-color: #071a2e !important;
            color: white !important;
            border-color: #071a2e !important;
            padding: 0.5rem 0.4rem;
            font-size: 0.8rem;
        }

        #plotsTable tbody tr {
            transition: background-color 0.15s ease;
        }

        #plotsTable tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        #plotsTable tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

        #plotsTable tbody tr:hover {
            background-color: #e9ecef !important;
        }

        #plotsTable tbody td {
            vertical-align: middle;
            padding: 0.4rem 0.3rem;
            white-space: nowrap;
            max-width: 150px;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 0.8rem;
        }

        #plotsTable tbody td:first-child {
            white-space: normal;
            max-width: 110px;
            overflow: visible;
            padding: 0.3rem 0.2rem;
        }

        #plotsTable .btn-group {
            display: inline-flex;
            gap: 1px;
        }

        #plotsTable .btn-group .btn {
            padding: 0.1rem 0.2rem;
            border-radius: 0.2rem;
            min-width: 24px;
        }

        #plotsTable .btn-group .btn i {
            font-size: 0.7rem;
        }

        .table-responsive {
            overflow-x: auto !important;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table-responsive::-webkit-scrollbar {
            height: 12px;
            width: 12px;
        }

        .table-responsive::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 6px;
        }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        @@media (max-width: 1200px) {
            #plotsTable {
                font-size: 0.8rem;
            }

            #plotsTable tbody td {
                padding: 0.35rem 0.25rem;
                max-width: 120px;
            }

            #plotsTable thead th {
                padding: 0.45rem 0.35rem;
                font-size: 0.75rem;
            }
        }

        @@media (max-width: 768px) {
            #plotsTable {
                font-size: 0.75rem;
                min-width: 650px;
            }

            #plotsTable tbody td {
                padding: 0.3rem 0.2rem;
                max-width: 100px;
            }

            #plotsTable thead th {
                padding: 0.4rem 0.25rem;
                font-size: 0.7rem;
            }

            #plotsTable .btn-group .btn {
                padding: 0.08rem 0.15rem;
                min-width: 20px;
            }

            #plotsTable .btn-group .btn i {
                font-size: 0.65rem;
            }
        }
    </style>
}
