@{
    ViewData["Title"] = "Inventory Summary";
    var plotsByCategory = ViewBag.PlotsByCategory as List<KeyValuePair<string, int>> ?? new();
    var plotsByAllotmentStatus = ViewBag.PlotsByAllotmentStatus as List<KeyValuePair<string, int>> ?? new();
    var plotsByProject = ViewBag.PlotsByProject as List<KeyValuePair<string, int>> ?? new();
    var plotsByUnitType = ViewBag.PlotsByUnitType as List<KeyValuePair<string, int>> ?? new();
    var plotsByDevelopmentStatus = ViewBag.PlotsByDevelopmentStatus as List<KeyValuePair<string, int>> ?? new();
    var plotsByConstructionStatus = ViewBag.PlotsByConstructionStatus as List<KeyValuePair<string, int>> ?? new();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Inventory Summary</h2>
        <a asp-action="Index" class="btn btn-primary">View All Inventory</a>
    </div>

    <!-- Summary Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Plots</h6>
                            <h3 class="mb-0 text-primary">@ViewBag.TotalPlots</h3>
                        </div>
                        <div class="text-primary" style="font-size: 2.5rem;">üìä</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Available</h6>
                            <h3 class="mb-0 text-success">@ViewBag.AvailablePlots</h3>
                        </div>
                        <div class="text-success" style="font-size: 2.5rem;">‚úÖ</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Reserved</h6>
                            <h3 class="mb-0 text-warning">@ViewBag.ReservedPlots</h3>
                        </div>
                        <div class="text-warning" style="font-size: 2.5rem;">üîí</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Allotted</h6>
                            <h3 class="mb-0 text-info">@ViewBag.AllottedPlots</h3>
                        </div>
                        <div class="text-info" style="font-size: 2.5rem;">üè†</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Statistics -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Residential</h6>
                            <h3 class="mb-0 text-danger">@ViewBag.ResidentialPlots</h3>
                        </div>
                        <div class="text-danger" style="font-size: 2.5rem;">üèòÔ∏è</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-secondary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Commercial</h6>
                            <h3 class="mb-0 text-secondary">@ViewBag.CommercialPlots</h3>
                        </div>
                        <div class="text-secondary" style="font-size: 2.5rem;">üè¢</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Statistics Tables -->
    <div class="row">
        <!-- Plots by Category -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Plots by Category</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Category</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (plotsByCategory.Any())
                                {
                                    @foreach (var item in plotsByCategory)
                                    {
                                        <tr>
                                            <td>@item.Key</td>
                                            <td class="text-end"><strong>@item.Value</strong></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center text-muted">No data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Plots by Allotment Status -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Plots by Allotment Status</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Status</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (plotsByAllotmentStatus.Any())
                                {
                                    @foreach (var item in plotsByAllotmentStatus)
                                    {
                                        <tr>
                                            <td>
                                                @if (item.Key.ToLower() == "allotted" || item.Key.ToLower() == "reserved")
                                                {
                                                    <span class="badge bg-success">@item.Key</span>
                                                }
                                                else if (item.Key.ToLower() == "available")
                                                {
                                                    <span class="badge bg-info">@item.Key</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@item.Key</span>
                                                }
                                            </td>
                                            <td class="text-end"><strong>@item.Value</strong></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center text-muted">No data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Plots by Project -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Plots by Project</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Project</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (plotsByProject.Any())
                                {
                                    @foreach (var item in plotsByProject)
                                    {
                                        <tr>
                                            <td>@item.Key</td>
                                            <td class="text-end"><strong>@item.Value</strong></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center text-muted">No data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Plots by Unit Type -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Plots by Unit Type</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Unit Type</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (plotsByUnitType.Any())
                                {
                                    @foreach (var item in plotsByUnitType)
                                    {
                                        <tr>
                                            <td>@item.Key</td>
                                            <td class="text-end"><strong>@item.Value</strong></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center text-muted">No data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Plots by Development Status -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Plots by Development Status</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Status</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (plotsByDevelopmentStatus.Any())
                                {
                                    @foreach (var item in plotsByDevelopmentStatus)
                                    {
                                        <tr>
                                            <td>@item.Key</td>
                                            <td class="text-end"><strong>@item.Value</strong></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center text-muted">No data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Plots by Construction Status -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Plots by Construction Status</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Status</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (plotsByConstructionStatus.Any())
                                {
                                    @foreach (var item in plotsByConstructionStatus)
                                    {
                                        <tr>
                                            <td>@item.Key</td>
                                            <td class="text-end"><strong>@item.Value</strong></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center text-muted">No data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .container-fluid {
            font-size: 0.875rem;
        }
        .container-fluid h2 {
            font-size: 1.5rem;
        }
        .card {
            border-radius: 8px;
        }
        .card-header {
            border-radius: 8px 8px 0 0 !important;
            font-weight: 600;
        }
        .card-body h3 {
            font-size: 2rem;
            font-weight: 700;
        }
        .card-body h6 {
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .table {
            font-size: 0.875rem;
        }
        .table thead th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            padding: 0.75rem;
            vertical-align: middle;
        }
        .table tbody td {
            padding: 0.75rem;
            vertical-align: middle;
        }
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
        .badge {
            font-size: 0.75rem;
            padding: 0.35em 0.65em;
            font-weight: 500;
        }
        .sticky-top {
            position: sticky;
            top: 0;
            z-index: 10;
        }
        .table-responsive::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        .table-responsive::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }
        .table-responsive::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }
        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
}