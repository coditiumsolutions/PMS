@model PMS.Web.Models.InventoryDetail

@{
    ViewData["Title"] = "Edit Plot";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Edit Plot</h2>
        <a asp-action="AllPlots" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="UID" />
                        
                        <!-- Project Information Section -->
                        <div class="card mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Project Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Project" class="form-label fw-semibold"></label>
                                        <input asp-for="Project" class="form-control" />
                                        <span asp-validation-for="Project" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="SubProject" class="form-label fw-semibold"></label>
                                        <input asp-for="SubProject" class="form-control" />
                                        <span asp-validation-for="SubProject" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Sector" class="form-label fw-semibold"></label>
                                        <input asp-for="Sector" class="form-control" />
                                        <span asp-validation-for="Sector" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Block" class="form-label fw-semibold"></label>
                                        <input asp-for="Block" class="form-control" />
                                        <span asp-validation-for="Block" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Street" class="form-label fw-semibold"></label>
                                        <input asp-for="Street" class="form-control" />
                                        <span asp-validation-for="Street" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="PlotNo" class="form-label fw-semibold"></label>
                                        <input asp-for="PlotNo" class="form-control" />
                                        <span asp-validation-for="PlotNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Unit Information Section -->
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">Unit Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Category" class="form-label fw-semibold"></label>
                                        <select asp-for="Category" class="form-select">
                                            <option value="">Select Category</option>
                                            <option value="Residential">Residential</option>
                                            <option value="Commercial">Commercial</option>
                                        </select>
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="UnitSize" class="form-label fw-semibold"></label>
                                        <input asp-for="UnitSize" class="form-control" placeholder="e.g., 5 Marla, 10 Marla" />
                                        <span asp-validation-for="UnitSize" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="UnitType" class="form-label fw-semibold"></label>
                                        <select asp-for="UnitType" class="form-select">
                                            <option value="">Select Unit Type</option>
                                            <option value="Plot">Plot</option>
                                            <option value="Apartment">Apartment</option>
                                            <option value="Shop">Shop</option>
                                            <option value="Office">Office</option>
                                            <option value="Villa">Villa</option>
                                            <option value="Warehouse">Warehouse</option>
                                        </select>
                                        <span asp-validation-for="UnitType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="FloorNo" class="form-label fw-semibold"></label>
                                        <input asp-for="FloorNo" class="form-control" />
                                        <span asp-validation-for="FloorNo" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="UnitNo" class="form-label fw-semibold"></label>
                                        <input asp-for="UnitNo" class="form-control" />
                                        <span asp-validation-for="UnitNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Status Information Section -->
                        <div class="card mb-4">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">Status Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="DevelopmentStatus" class="form-label fw-semibold"></label>
                                        <select asp-for="DevelopmentStatus" class="form-select">
                                            <option value="">Select Status</option>
                                            <option value="Developed">Developed</option>
                                            <option value="Under Development">Under Development</option>
                                        </select>
                                        <span asp-validation-for="DevelopmentStatus" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="ConstStatus" class="form-label fw-semibold"></label>
                                        <select asp-for="ConstStatus" class="form-select">
                                            <option value="">Select Status</option>
                                            <option value="Completed">Completed</option>
                                            <option value="Under Construction">Under Construction</option>
                                            <option value="Vacant">Vacant</option>
                                        </select>
                                        <span asp-validation-for="ConstStatus" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="AllotmentStatus" class="form-label fw-semibold"></label>
                                        <select asp-for="AllotmentStatus" class="form-select">
                                            <option value="">Select Status</option>
                                            <option value="Available">Available</option>
                                            <option value="Reserved">Reserved</option>
                                            <option value="Allotted">Allotted</option>
                                        </select>
                                        <span asp-validation-for="AllotmentStatus" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Allotment Information Section -->
                        <div class="card mb-4">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0">Allotment Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="CustomerNo" class="form-label fw-semibold"></label>
                                        <input asp-for="CustomerNo" class="form-control" />
                                        <span asp-validation-for="CustomerNo" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="AllotmentDate" class="form-label fw-semibold"></label>
                                        <input asp-for="AllotmentDate" type="date" class="form-control" />
                                        <span asp-validation-for="AllotmentDate" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="AllottedBy" class="form-label fw-semibold"></label>
                                        <input asp-for="AllottedBy" class="form-control" />
                                        <span asp-validation-for="AllottedBy" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Information Section -->
                        <div class="card mb-4">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="mb-0">Additional Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="CreationDate" class="form-label fw-semibold"></label>
                                        <input asp-for="CreationDate" type="date" class="form-control" />
                                        <span asp-validation-for="CreationDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
                            <a asp-action="AllPlots" class="btn btn-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
