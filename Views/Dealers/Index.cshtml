@model IEnumerable<PMS.Web.Models.Dealer>

@{
    ViewData["Title"] = "Dealers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Dealers</h2>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus me-1"></i> New Dealer</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    No dealers found. <a asp-action="Create">Create a new dealer</a> to get started.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Dealers List</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col" class="ps-3" style="width: 5%;">ID</th>
                                <th scope="col" style="width: 20%;">Dealership Name</th>
                                <th scope="col" style="width: 15%;">Owner Name</th>
                                <th scope="col" style="width: 12%;">Mobile No</th>
                                <th scope="col" style="width: 12%;">Email</th>
                                <th scope="col" style="width: 10%;">Status</th>
                                <th scope="col" class="pe-3 text-center" style="width: 20%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3 fw-medium">@item.DealerID</td>
                                    <td class="fw-medium">@item.DealershipName</td>
                                    <td>@(item.OwnerName ?? "-")</td>
                                    <td>@(item.MobileNo ?? "-")</td>
                                    <td>@(item.Email ?? "-")</td>
                                    <td>
                                        @if (string.Equals(item.Status, "Active", StringComparison.OrdinalIgnoreCase))
                                        { <span class="badge bg-success">Active</span> }
                                        else
                                        { <span class="badge bg-secondary">@(item.Status ?? "â€”")</span> }
                                    </td>
                                    <td class="pe-3 text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.DealerID" class="btn btn-sm btn-info">Details</a>
                                            <a asp-action="Edit" asp-route-id="@item.DealerID" class="btn btn-sm btn-warning">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.DealerID" class="btn btn-sm btn-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
