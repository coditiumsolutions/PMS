@model PMS.Web.Models.Dealer

@{
    ViewData["Title"] = "Delete Dealer";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Delete Dealer</h2>
        <a asp-action="AllDealers" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> Are you sure you want to delete this dealer? Customers linked to this dealer will have their Dealer set to none.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Dealer ID:</dt>
                        <dd class="col-sm-9">@Model.DealerID</dd>

                        <dt class="col-sm-3">Dealership Name:</dt>
                        <dd class="col-sm-9">@Model.DealershipName</dd>

                        <dt class="col-sm-3">Owner Name:</dt>
                        <dd class="col-sm-9">@(Model.OwnerName ?? "-")</dd>

                        <dt class="col-sm-3">Mobile No:</dt>
                        <dd class="col-sm-9">@(Model.MobileNo ?? "-")</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@(Model.Email ?? "-")</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="DealerID" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="AllDealers" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
