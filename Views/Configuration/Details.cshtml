@model PMS.Web.Models.Configuration

@{
    ViewData["Title"] = "Configuration Details";
}

<h2>Configuration Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConfigKey)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConfigKey)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConfigValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConfigValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Yes" : "No")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
