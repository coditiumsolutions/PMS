@model PMS.Web.Models.Registration

@{
    ViewData["Title"] = "Edit Registration";
    var projectOptions = ViewBag.ProjectOptions as List<PMS.Web.Models.Project> ?? new List<PMS.Web.Models.Project>();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Edit Registration</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="RegID" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div class="row g-2 align-items-start mb-2">
                            <div class="col-md-2 d-flex align-items-center">
                                <label asp-for="FullName" class="form-label fw-semibold mb-0"></label>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger d-block"></span>
                            </div>
                            <div class="col-md-2 d-flex align-items-center">
                                <label asp-for="CNIC" class="form-label fw-semibold mb-0"></label>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="CNIC" class="form-control" placeholder="XXXXX-XXXXXXX-X" />
                                <span asp-validation-for="CNIC" class="text-danger d-block"></span>
                            </div>
                        </div>

                        <div class="row g-2 align-items-start mb-2">
                            <div class="col-md-2 d-flex align-items-center">
                                <label asp-for="Phone" class="form-label fw-semibold mb-0"></label>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger d-block"></span>
                            </div>
                            <div class="col-md-2 d-flex align-items-center">
                                <label asp-for="Email" class="form-label fw-semibold mb-0"></label>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger d-block"></span>
                            </div>
                        </div>

                        <div class="row g-2 align-items-start mb-2">
                            <div class="col-md-2 d-flex align-items-center">
                                <label asp-for="ProjectID" class="form-label fw-semibold mb-0"></label>
                            </div>
                            <div class="col-md-4">
                                <select asp-for="ProjectID" class="form-select">
                                    <option value="">Select Project</option>
                                    @foreach (var project in projectOptions)
                                    {
                                        <option value="@project.Id">@project.ProjectName</option>
                                    }
                                </select>
                                <span asp-validation-for="ProjectID" class="text-danger d-block"></span>
                            </div>
                            <div class="col-md-2 d-flex align-items-center">
                                <label asp-for="RequestedSize" class="form-label fw-semibold mb-0"></label>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="RequestedSize" class="form-control" placeholder="e.g., 5 Marla, 10 Marla" />
                                <span asp-validation-for="RequestedSize" class="text-danger d-block"></span>
                            </div>
                        </div>

                        <div class="row g-2 align-items-start mb-2">
                            <div class="col-md-2 d-flex align-items-center">
                                <label asp-for="Status" class="form-label fw-semibold mb-0"></label>
                            </div>
                            <div class="col-md-4">
                                <select asp-for="Status" class="form-select">
                                    <option value="Pending">Pending</option>
                                    <option value="Approved">Approved</option>
                                    <option value="Rejected">Rejected</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger d-block"></span>
                            </div>
                            <div class="col-md-2 d-flex align-items-center">
                                <label asp-for="CreatedAt" class="form-label fw-semibold mb-0"></label>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="CreatedAt" type="datetime-local" class="form-control" value="@(Model.CreatedAt?.ToString("yyyy-MM-ddTHH:mm") ?? "")" readonly />
                                <small class="text-muted d-block">Registration date (read-only)</small>
                            </div>
                        </div>

                        <div class="row g-2 align-items-start mb-2">
                            <div class="col-md-2 d-flex align-items-center">
                                <label asp-for="Remarks" class="form-label fw-semibold mb-0"></label>
                            </div>
                            <div class="col-md-4">
                                <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Remarks" class="text-danger d-block"></span>
                            </div>
                            <div class="col-md-2"></div>
                            <div class="col-md-4"></div>
                        </div>

                        <div class="text-center mt-3">
                            <input type="submit" value="Save Changes" class="btn btn-primary px-4 me-2" />
                            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
