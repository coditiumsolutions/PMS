@model PMS.Web.Models.Registration

@{
    ViewData["Title"] = "Registration Details";
}

<div class="container-fluid">
    <div class="mb-4">
        <h2>Registration Details</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row g-2 align-items-start mb-2">
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.RegID)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.RegID)</div>
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.FullName)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.FullName)</div>
            </div>

            <div class="row g-2 align-items-start mb-2">
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.CNIC)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.CNIC)</div>
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.Phone)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.Phone)</div>
            </div>

            <div class="row g-2 align-items-start mb-2">
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.ContactNo1)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.ContactNo1)</div>
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.ContactNo2)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.ContactNo2)</div>
            </div>

            <div class="row g-2 align-items-start mb-2">
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.Email)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.Email)</div>
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.ProjectID)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.ProjectID)</div>
            </div>

            <div class="row g-2 align-items-start mb-2">
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.RequestedSize)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.RequestedSize)</div>
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.MailingAddress)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.MailingAddress)</div>
            </div>

            <div class="row g-2 align-items-start mb-2">
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.MailingCity)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.MailingCity)</div>
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.MailingCountry)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.MailingCountry)</div>
            </div>

            <div class="row g-2 align-items-start mb-2">
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.Status)</div>
                <div class="col-md-4">
                    @if (Model.Status?.ToLower() == "pending")
                    {
                        <span class="badge bg-warning">@Html.DisplayFor(model => model.Status)</span>
                    }
                    else if (Model.Status?.ToLower() == "approved" || Model.Status?.ToLower() == "completed")
                    {
                        <span class="badge bg-success">@Html.DisplayFor(model => model.Status)</span>
                    }
                    else if (Model.Status?.ToLower() == "rejected" || Model.Status?.ToLower() == "cancelled")
                    {
                        <span class="badge bg-danger">@Html.DisplayFor(model => model.Status)</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Html.DisplayFor(model => model.Status)</span>
                    }
                </div>
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.CreatedAt)</div>
                <div class="col-md-4">@(Model.CreatedAt?.ToString("MMM dd, yyyy HH:mm") ?? "N/A")</div>
            </div>

            <div class="row g-2 align-items-start mb-2">
                <div class="col-md-2 fw-semibold">@Html.DisplayNameFor(model => model.Remarks)</div>
                <div class="col-md-4">@Html.DisplayFor(model => model.Remarks)</div>
                <div class="col-md-2"></div>
                <div class="col-md-4"></div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Edit" asp-route-id="@Model.RegID" class="btn btn-primary px-4 me-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
            </div>
        </div>
    </div>
</div>
