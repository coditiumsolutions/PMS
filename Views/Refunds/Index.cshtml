@model IEnumerable<PMS.Web.Models.Refund>

@{
    ViewData["Title"] = "Refunds";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Refunds</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Refund Records</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-3">ID</th>
                            <th>@Html.DisplayNameFor(model => model.RefundType)</th>
                            <th>@Html.DisplayNameFor(model => model.CustomerNo)</th>
                            <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                            <th>@Html.DisplayNameFor(model => model.AmountToRefund)</th>
                            <th>@Html.DisplayNameFor(model => model.ProjectName)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <th class="pe-3 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">@item.Uid</td>
                                <td>@item.RefundType</td>
                                <td>@item.CustomerNo</td>
                                <td>@item.CustomerName</td>
                                <td>@item.AmountToRefund</td>
                                <td>@item.ProjectName</td>
                                <td>@item.CreatedDate?.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="pe-3 text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Uid" class="btn btn-sm btn-info">Details</a>
                                        <a asp-action="Edit" asp-route-id="@item.Uid" class="btn btn-sm btn-warning">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Uid" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
