@model IEnumerable<PMS.Web.Models.Transfer>

@{
    ViewData["Title"] = "All Transfers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Transfers</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Transfer</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    No transfers found. <a asp-action="Create">Create a new transfer</a> to get started.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Customer No</th>
                                <th>Transfer Type</th>
                                <th>Buyer Name</th>
                                <th>Buyer CNIC</th>
                                <th>Creation Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.uId</td>
                                    <td>@item.CustomerNo</td>
                                    <td>@item.TransferType</td>
                                    <td>@item.BuyerName</td>
                                    <td>@item.BuyerCnic</td>
                                    <td>@item.CreationDate</td>
                                    <td>
                                        <a asp-action="TransferDetails" asp-route-id="@item.uId" class="btn btn-sm btn-info">Details</a>
                                        <a asp-action="Edit" asp-route-id="@item.uId" class="btn btn-sm btn-warning">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
