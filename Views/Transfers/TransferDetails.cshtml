@model PMS.Web.Models.Transfer

@{
    ViewData["Title"] = "Transfer Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Transfer Details</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.uId" class="btn btn-warning">Edit</a>
            <a asp-action="AllTransfers" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Transfer Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Transfer Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Transfer ID:</strong> @Model.uId
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Customer No:</strong> @Model.CustomerNo
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Transfer Type:</strong> @Model.TransferType
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Nature of Transfer:</strong> @Model.NatureOfTransfer
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Initiating Office:</strong> @Model.InitiatingOffice
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Owner Type:</strong> @Model.OwnerType
                        </div>
                        <div class="col-md-12 mb-3">
                            <strong>Seller Info:</strong> @Model.SellerInfo
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buyer Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Buyer Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Buyer Name:</strong> @Model.BuyerName
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Buyer Father Name:</strong> @(Model.BuyerFatherName ?? "N/A")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Buyer CNIC:</strong> @Model.BuyerCnic
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Buyer Contact No:</strong> @(Model.BuyerContactNo ?? "N/A")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Buyer Email:</strong> @(Model.BuyerEmail ?? "N/A")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Buyer Gender:</strong> @(Model.BuyerGender ?? "N/A")
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buyer Address -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Buyer Address</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Present Address:</strong> @(Model.BuyerPresAddress ?? "N/A")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Permanent Address:</strong> @(Model.BuyerPremAddress ?? "N/A")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Present City:</strong> @(Model.BuyerPresCity ?? "N/A")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Permanent City:</strong> @(Model.BuyerPremCity ?? "N/A")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Present Country:</strong> @(Model.BuyerPresCountry ?? "N/A")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Permanent Country:</strong> @(Model.BuyerPremCountry ?? "N/A")
                        </div>
                    </div>
                </div>
            </div>

            <!-- NDC Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">NDC Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <strong>NDC Exist:</strong> @(Model.NdcExist ?? "N/A")
                        </div>
                        <div class="col-md-4 mb-3">
                            <strong>NDC Amount:</strong> @(Model.NdcAmount ?? "N/A")
                        </div>
                        <div class="col-md-4 mb-3">
                            <strong>NDC Detail:</strong> @(Model.NdcDetail ?? "N/A")
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Additional Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Creation Date:</strong> @(Model.CreationDate ?? "N/A")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Created By:</strong> @(Model.CreatedBy ?? "N/A")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
