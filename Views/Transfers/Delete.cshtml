@model PMS.Web.Models.Transfer

@{
    ViewData["Title"] = "Delete Transfer";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Delete Transfer</h2>
        <a asp-action="AllTransfers" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Warning!</h4>
        <p>Are you sure you want to delete this transfer? This action cannot be undone.</p>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Transfer Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Transfer ID:</dt>
                        <dd class="col-sm-9">@Model.uId</dd>

                        <dt class="col-sm-3">Customer No:</dt>
                        <dd class="col-sm-9">@Model.CustomerNo</dd>

                        <dt class="col-sm-3">Transfer Type:</dt>
                        <dd class="col-sm-9">@Model.TransferType</dd>

                        <dt class="col-sm-3">Buyer Name:</dt>
                        <dd class="col-sm-9">@Model.BuyerName</dd>

                        <dt class="col-sm-3">Buyer CNIC:</dt>
                        <dd class="col-sm-9">@Model.BuyerCnic</dd>

                        <dt class="col-sm-3">Creation Date:</dt>
                        <dd class="col-sm-9">@(Model.CreationDate ?? "N/A")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="uId" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="AllTransfers" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
